@model GestionProdFinal.ViewModels.CatalogoViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Catalogos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-horizontal">
        <h4>CatalogoViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <div class="form-group">
            @Html.LabelFor(model => model.precioVentaFinal)
            <div class="col-md-10">

                @Html.EditorFor(model => model.precioVentaFinal)
                @Html.ValidationMessageFor(model => model.precioVentaFinal)
            </div>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idProductoSeleccionado)
        </div>
        <div>

            @Html.DropDownListFor(model => model.idProductoSeleccionado, Model.todosLosProductos)

        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
